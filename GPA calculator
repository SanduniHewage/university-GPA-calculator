<body>
  <div class="container">
    <h2>Credit-based GPA Calculator</h2>

    <!-- Step 1: Ask number of subjects -->
    <div id="setup">
      <label for="numSubjects">Enter Number of Subjects:</label>
      <input type="number" id="numSubjects" min="1" placeholder="e.g. 5">
      <button onclick="generateSubjects()">Submit</button>
    </div>

    <!-- Step 2: Subjects inputs -->
    <form id="subjectsForm" style="display:none;">
      <div id="subjects"></div>
      <button type="button" onclick="calculateGPA()">Calculate GPA</button>
    </form>

    <!-- Step 3: Results -->
    <div class="results" id="results"></div>
  </div>

  <script>
    const gradePoints = {
      "A+": 4.0,
      "A": 4.0,
      "A-": 3.7,
      "B+": 3.3,
      "B": 3.0,
      "B-": 2.7,
      "C+": 2.3,
      "C": 2.0,
      "C-": 1.7,
      "D+": 1.3,
      "D": 1.0,
      "E": 0.0
    };

    const gradeDescriptions = {
      "A+": "Superior Performance",
      "A": "Excellent",
      "A-": "Very Good",
      "B+": "Good, clearly above average",
      "B": "Above average",
      "B-": "Average performance",
      "C+": "Quite Satisfactory",
      "C": "Pass and possesses basic understanding",
      "C-": "Satisfactory",
      "D+": "Weak",
      "D": "Quite Weak",
      "E": "Very Weak"
    };

    function generateSubjects() {
      const num = parseInt(document.getElementById("numSubjects").value);
      const subjectsDiv = document.getElementById("subjects");

      if (isNaN(num) || num <= 0) {
        alert("⚠️ Please enter a valid number of subjects.");
        return;
      }

      subjectsDiv.innerHTML = ""; // clear old inputs
      for (let i = 1; i <= num; i++) {
        subjectsDiv.innerHTML += `
          <div class="subject">
            <label>Subject ${i}:</label>
            <input type="number" id="credit${i}" placeholder="Credits" min="1">
            <select id="grade${i}">
              ${Object.keys(gradePoints).map(g => `<option value="${g}">${g}</option>`).join("")}
            </select>
          </div>
        `;
      }

      document.getElementById("subjectsForm").style.display = "block";
    }

    function calculateGPA() {
      const num = parseInt(document.getElementById("numSubjects").value);
      let totalPoints = 0, totalCredits = 0;
      let resultsHTML = "";

      for (let i = 1; i <= num; i++) {
        let credits = parseInt(document.getElementById("credit" + i).value);
        let grade = document.getElementById("grade" + i).value;

        if (isNaN(credits) || credits <= 0) {
          resultsHTML += `<div class="subject-result">⚠️ Subject ${i}: Invalid credit value</div>`;
          continue;
        }

        let gpa = gradePoints[grade];
        totalPoints += gpa * credits;
        totalCredits += credits;

        resultsHTML += `
          <div class="subject-result">
            Subject ${i}: Credits = ${credits} | Grade = ${grade} | GPA = ${gpa} | ${gradeDescriptions[grade]}
          </div>
        `;
      }

      if (totalCredits > 0) {
        let overall = (totalPoints / totalCredits).toFixed(2);
        resultsHTML += `<div class="overall">⭐ Overall GPA: ${overall}</div>`;
      }

      document.getElementById("results").innerHTML = resultsHTML;
    }
  </script>
</body>
</html>

